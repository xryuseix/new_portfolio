{
  "name": "xryuseix.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:pages": "npx @cloudflare/next-on-pages",
    "cf-typegen": "yarn wrangler types --env-interface CloudflareEnv env.d.ts",
    "deploy": "yarn run build:pages && yarn wrangler pages deploy",
    "dev": "next dev",
    "format": "biome format --write src public",
    "lint": "biome lint --write src",
    "live2d:build": "pushd ./CubismWebSamples && yarn build && popd && yarn live2d:copy",
    "live2d:copy": "cp -r ./CubismWebSamples/dist/assets/index-*.js ./public/bundle.js",
    "preview": "yarn run build:pages && yarn wrangler pages dev",
    "start": "next start"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "hono": "^4.4.13",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "swr": "^2.2.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@cloudflare/next-on-pages": "^1.12.1",
    "@cloudflare/workers-types": "^4.20240701.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5",
    "vercel": "^34.3.1",
    "wrangler": "^3.64.0"
  }
}
